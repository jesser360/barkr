<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- bootstrap css -->
  <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="/scripts/app.js"></script>

  <title>Barkr Signup</title>
</head>

  <body>

    <div class="container text-center">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">

              <form id="signup-form" data-toggle="validator" role="form">
>

                  <h1 class="text-center">Personal Info</h1>
                  <h3 class="text-center">Please complete the following to sign up for barkr</h3>

                  <hr>

                  <div class="form-group">
                      <label style="font-size:20px" for="ownerName">Name</label>
                      <input type="text" class="form-control" name="ownerName" placeholder="Please enter your first and last name">
                  </div>

                  <div class="form-group">
                      <label for="imgOwner">Photo</label>
                      <!-- (TODO: add validation for this image input: must contain .jpg, .png .... etc) -->
                      <input type="text" class="form-control" name="imgOwner" placeholder="Please enter img URL">
                  </div>

                  <div class="form-group">
                      <label for="age">Age</label>
                      <input type="number" pattern="[0-9]" data-maxlength="4" class="form-control" name="age" placeholder="How old are you?" data-error="Please enter valid age: must be a number under 5 characters" required>
                  </div>

                  <div class="form-group">
                      <label for="gender">Gender</label>
                      <!-- TODO: make into a dropdown or checkboxes? -->
                      <input type="text" class="form-control" name="gender" placeholder="Enter gender here or N/A">
                  </div>

                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" placeholder="Email" data-error="Enter valid email" autofocus>
                  </div>

                  <div class="form-group">
                    <label for="inputPassword" class="control-label">Password</label>
                    <div class="form-inline row">
                      <div class="form-group col-sm-6">
                        <input type="password" data-minlength="6" class="form-control" id="inputPassword" placeholder="Password" required>
                        <div class="help-block">Minimum of 6 characters</div>
                      </div>
                      <div class="form-group col-sm-6">
                        <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#inputPassword" data-match-error="Whoops, these don't match" placeholder="Confirm Password" required>
                        <div class="help-block with-errors"></div>
                      </div>
                    </div>
                  </div>

                  <!-- <div class="form-group">
                    <label for="password">Create Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Password">
                  </div> -->

                  <div class="form-group">
                    <input type="submit" value="Sign Up" class="submit btn btn-primary">
                  </div>

                  <a href="/login">Already have an account? Login</a>

                </form>

            </div>
          </div>
        </div>

  </form>


  </body>
</html>
